load("@fbcode//quic:defs.bzl", "mvfst_cpp_library")

oncall("traffic_protocols")

mvfst_cpp_library(
    name = "qlogger_constants",
    srcs = [
        "QLoggerConstants.cpp",
    ],
    headers = [
        "QLoggerConstants.h",
    ],
    exported_deps = [
        "//quic:constants",
        "//quic/codec:types",
    ],
)

mvfst_cpp_library(
    name = "qlog_schema",
    srcs = [
